{
  "compilerOptions": {
    "outDir": "./dist/",
   "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    //absolute import
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS" 
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
}